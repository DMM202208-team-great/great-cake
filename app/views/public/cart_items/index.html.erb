<div class='container'>
  <div class='row'>
    <h2>カート内商品index</h2>

    <%= link_to '/cart_items', method: :delete do %>
      <button type="button" class="btn btn-danger">カートを空にする</button>
    <% end %>

    <table class='table'>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price.to_s(:delimited) %>円</td>
          <td>
            <%= form_with model: cart_item, method: :patch do |f| %>
            <!--カート内商品を追加するためのフォームです-->
              <%= f.select :amount, *[1..50] %>
              <!--cart_itemモデルにquantityを渡すためのフォームです-->
              <%= f.submit "変更", class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td><%= cart_item.sum_of_price.to_s(:delimited) %>円</td>
          <td>
            <%= link_to cart_item_path(cart_item.id), method: :delete do %>
              <button type="button" class="btn btn-danger">削除する</button>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div>
      <div>
        <%= link_to items_path do %>
          <button type="button" class="btn btn-primary">買い物を続ける</button>
        <% end %>
      </div>
      <div>
        <table class='table'>
          <tbody>
            <tr>
              <% @total = @cart_items.inject(0) { |sum, item| sum + item.sum_of_price } %>
              <th>合計金額</th>
              <td><%= @total.to_s(:delimited) %>円</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div>
      <div>
        <%= link_to new_order_path do %>
          <button type="button" class="btn btn-success">情報入力に進む</button>
        <% end %>
      </div>
    </div>
  </div>
</div>