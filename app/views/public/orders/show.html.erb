<h2>注文履歴詳細</h2>

<strong>注文情報</strong>
<table>
  <tr><th>注文日</th><td><%= @order.created_at.to_date %></td></tr>
  <tr>
    <th>配送先</th>
    <td>
      <%= @order.post_code %></br>
      <%= @order.address %></br>
      <%= @order.name %>
    </td>
  </tr>
  <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
  <tr><th>ステータス</th><td><%= @order.status_i18n %></td></tr>
</table>

<strong>請求内容</strong>
<table>
  <tr><th>商品合計</th>
  <% @order_subtotal = @order.total_payment - @order.postage %>
  <td><%= @order_subtotal.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= @order.postage%></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= @order.total_payment.to_s(:delimited) %></td>
  </tr>
</table>

<strong>注文内容</strong>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @order.order_detail.each do |order_detail| %>
  <tbody>
    <tr>
      <td><%= order_detail.item.name %></td>
      <!--税込のメソッド（itemモデルに記載）を使用-->
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <!--小計のメソッド（order_detailモデルに記載）を使用-->
      <td><%= order_detail.subtotal %></td>
    </tr>
  </tbody>
<% end %>
</table>