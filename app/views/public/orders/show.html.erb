<div class="h2 pb-2 mb-4 pl-4 text-success border-bottom border-success">
  注文履歴詳細
</div>

<div class="container">
  <div class="row g-3">

<div class="col-md-7 offser-md-1 ">
    <div class="mb-2"><strong>注文情報</strong></div>
      <table class="table table-bordered">
        <thead>
        <tr>
          <th class="table-active">注文日</th>
          <td><%= @order.created_at.to_date %></td>
        </tr>
        <tr>
          <th class="table-active">配送先</th>
          <td>
              <%= @order.post_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-active">支払方法</th>
           <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="table-active">ステータス</th>
           <td><%= @order.status_i18n %></td>
        </tr>
       </thead>
      </table>
  </div>

  <div class="col-md-5">
    <div class="mb-2"><strong>請求内容</strong></div>
    <table class="table table-bordered">
      <tr>
        <th class="table-active">商品合計</th>
         <% @order_subtotal = @order.total_payment - @order.postage %>
         <td>&yen;<%= @order_subtotal.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th class="table-active">配送料</th>
        <td>&yen;<%= @order.postage%></td>
      </tr>
      <tr>
        <th class="table-active">ご請求額</th>
        <td>&yen;<%= @order.total_payment.to_s(:delimited) %></td>
      </tr>
    </table>
  </div>


    <div class="col-md-6 text-nowrap">
      <div class="mb-2"><strong>注文内容</strong>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="table table-active">商品</th>
              <th class="table table-active">単価（税込）</th>
              <th class="table table-active">個数</th>
              <th class="table table-active">小計</th>
            </tr>
          </thead>
          <% @order.order_details.each do |order_detail| %>
          <tbody>
            <tr>
              <td><%= order_detail.item.name %></td>
              <!--税込のメソッド（itemモデルに記載）を使用-->
              <td>&yen;<%= order_detail.item.add_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <!--小計のメソッド（order_detailモデルに記載）を使用-->
              <td>&yen;<%= order_detail.sub_total %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>

 </div>
</div>
