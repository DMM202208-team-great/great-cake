<div class="container position-relative">
  <div class="row">
    <div class="col-md-3 mt-4">
      <div class="card mr-2">
        <div class="card-header text-center">
        ジャンル検索
        </div>
        <ul class="list-group list-group-flush">
          <% @genres.each do |genre| %>
            <li class="list-group-item text-center"><%= link_to genre.name, admin_genres_path(genre_id: genre.id) %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class=' col-md-8 ml-4 text-left'>
      <div class="row mt-4">
        <h2 class="text-center", style="background-color: #eee; width:200px; padding-left: 12px;"><b>商品一覧 </b></h2>
      </div>
      <div class="row pb-2">
        <div class="ml-2 mt-2 mb-3">
          全<%= @items.count %>件
          <div class="new-arrival">
            <div class="new-arrival-contents" style="display:flex; flex-wrap:wrap;">
            <% @items.each do |item| %>
              <%= link_to item_path(item) do %>
                <div class="mr-3 mt-3">
                  <!--%= image_tag item.get_item_image.variant( resize: "300" ) %><br>-->
                  <%= image_tag item.get_item_image, size:"160x120" %>
                  <p class="mt-3 mb-1", style="color:#000;"><%= item.name %></p>
                  <p class="mb-4", style="color:#000;"><%= item.add_tax_price %>円（税込)</p>
              <% end %>
                </div>
            <% end %>
            <div class="row justify-content-center align-items-end mt-7">
              <%= paginate @items %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>