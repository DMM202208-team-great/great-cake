<div class='container'>
  <div class='row'>
    <div class='col-lg-6 col-md-6'>
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model: @new_genre, url: admin_genres_path, method: :post do |f| %>
      <!--@genreでGenre.newを呼び出して新規登録フォームを作成する-->
        <label>ジャンル名</label>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
      <% end %>

      <p id="notice">
       <%=  notice %>
      </p>

      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>