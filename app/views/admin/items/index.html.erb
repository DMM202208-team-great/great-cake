<div class='container'>
  <h4 class="text-center my-4 mt-5", style="background-color: #eee; width:200px; padding-left: 12px;"><b>商品一覧</b></h4>
  <%= link_to new_admin_item_path do %>
    <i style="font-size: 50px; margin-left: 90%; color: #696969;" class="fa-solid fa-plus"></i>
  <% end %>
  <table class='table table-hover'>
    <thead>
      <tr style="background-color: #f5f5f5;">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item) do %>
           <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price %>円</td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == true %>
            <span class="text-success">販売中</span>
          <% else %>
            <span class="text-danger">販売停止中</span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>