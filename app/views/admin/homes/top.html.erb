<h1>管理者トップページ（注文履歴一覧）</h1>

<% if flash %>
  <%= flash[:notice] %>
<% end %>

<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-2'>
        <h4 class="text-center my-4 mt-5", style="background-color: #eee; width:200px; padding-left: 12px;"><b>注文履歴一覧</b></h4>
        <table>
            <thead>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= order.updated_at %></td>
                    <td><%= order.customer.first_name + order.customer.last_name %></td>
                    <td></td>
                    <td></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
