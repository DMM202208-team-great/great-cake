<div class='container'>
  <h4 class="text-center my-4 mt-5", style="background-color: #eee; width:200px; padding-left: 12px;"><b>注文履歴一覧</b></h4>
  <table class='table  table-hover'>
    <thead>
      <tr style="background-color: #f5f5f5;">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.updated_at %></td>
        <td><%= order.customer.first_name + order.customer.last_name %> 様</td>
        <td><!--注文個数を表示--></td>
        <td><!--注文ステータスを表示--></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

</div>
