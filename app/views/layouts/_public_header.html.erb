<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-dark", style="background-color: #ff9393;">
    <div class="container">
      <a class="navbar-brand text-light " href="/">
        <%= image_tag 'NAGANO CAKE4.png', size:"60x60", style: "position:relative; border-radius: 50%;" %>
